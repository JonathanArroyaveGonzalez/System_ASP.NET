@model Votacion

@{
    ViewData["Title"] = "Resultados de Votación";
    var votosPorOpcion = ViewBag.VotosPorOpcion as List<dynamic>;
    var detalleVotos = ViewBag.DetalleVotos as List<Voto>;
    var totalVotos = votosPorOpcion?.Sum(v => v.Cantidad) ?? 0;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>

    <div>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title">@Model.Titulo</h3>
    </div>
    <div class="card-body">
        <div class="mb-4">
            <h5>Resumen de votación</h5>
            <div class="row">
                <div class="col-md-4">
                    <div class="card text-white bg-info mb-3">
                        <div class="card-body">
                            <h6 class="card-title">Total de votos</h6>
                            <p class="card-text display-6">
                                @totalVotos
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white bg-success mb-3">
                        <div class="card-body">
                            <h6 class="card-title">Opciones</h6>
                            <p class="card-text display-6">
                                @Model.OpcionVotacions.Count
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white bg-warning mb-3">
                        <div class="card-body">
                            <h6 class="card-title">Tipo</h6>
                            <p class="card-text">
                                @(Model.TipoVotacion == "publica" ? "Pública" : "Secreta")
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <h5 class="mt-4">Resultados por opción</h5>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Opción</th>
                        <th>Votos</th>
                        <th>Porcentaje</th>
                        <th>Gráfico</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var opcion in Model.OpcionVotacions.OrderByDescending(o =>
                    votosPorOpcion?.FirstOrDefault(v => v.OpcionId == o.Id)?.Cantidad ?? 0))
                    {
                        var votosOpcion = votosPorOpcion?.FirstOrDefault(v => v.OpcionId == v.Id)?.Cantidad ?? 0;
                        var porcentaje = totalVotos > 0 ? (int)((votosOpcion * 100) / totalVotos) : 0;
                        <tr>
                            <td>@opcion.Texto</td>
                            <td>@votosOpcion</td>
                            <td>@porcentaje%</td>
                            <td>
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar"
                                         style="width: @porcentaje%"
                                         aria-valuenow="@porcentaje"
                                         aria-valuemin="0"
                                         aria-valuemax="100"></div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.TipoVotacion == "publica" && detalleVotos != null)
        {
            <h5 class="mt-4">Detalle de votos</h5>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Opción</th>
                            <th>Propietario</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var voto in detalleVotos)
                        {
                            var opcion = Model.OpcionVotacions.FirstOrDefault(o => o.Id == voto.OpcionId);
                            <tr>
                                <td>@(opcion?.Texto ?? "Desconocida")</td>
                                <td>@(voto.Usuario?.Nombre ?? "") @(voto.Usuario?.Apellido ?? "")</td>
                              </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>