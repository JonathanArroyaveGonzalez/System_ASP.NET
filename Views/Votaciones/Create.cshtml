@model Votacion

@{
    ViewData["Title"] = "Nueva Votación";
}

<h1>@ViewData["Title"]</h1>
<h4>Para asamblea: @ViewData["AsambleaTitulo"]</h4>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <input type="hidden" asp-for="AsambleaId" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Titulo" class="form-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label"></label>
                <textarea asp-for="Descripcion" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="FechaInicio" class="form-label"></label>
                    <input asp-for="FechaInicio" class="form-control" type="datetime-local" />
                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="FechaFin" class="form-label"></label>
                    <input asp-for="FechaFin" class="form-control" type="datetime-local" />
                    <span asp-validation-for="FechaFin" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="TipoVotacion" class="form-label"></label>
                <select asp-for="TipoVotacion" class="form-select">
                    <option value="publica">Pública (se ve el voto)</option>
                    <option value="secreta">Secreta (anonimizada)</option>
                </select>
                <span asp-validation-for="TipoVotacion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Crear Votación
                </button>
                <a asp-controller="Asambleas" asp-action="Details" asp-route-id="@Model.AsambleaId"
                   class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}