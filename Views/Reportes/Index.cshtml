@model IEnumerable<VotingSystem.Models.Reporte>

@{
    ViewData["Title"] = "Reportes";
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tipo</th>
            <th>Título</th>
            <th>Fecha de Generación</th>
            <th>Generado Por</th>
            <th>Formato</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Tipo</td>
                <td>@item.Titulo</td>
                <td>@item.FechaGeneracion?.ToString("dd/MM/yyyy")</td>
                <td>
                    @item.GeneradoPorNavigation?.Nombre @item.GeneradoPorNavigation?.Apellido
                </td>
                <td>@item.Formato</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                        <i class="fas fa-eye"></i> Ver
                    </a>
                    <a asp-action="ExportarPDF" asp-route-asambleaId="@item.Id" class="btn btn-danger btn-sm">
                        <i class="fas fa-file-pdf"></i> PDF
                    </a>
                    <a asp-action="GenerarReporteVotacion" asp-route-asambleaId="@item.Id" class="btn btn-primary btn-sm">
                        <i class="fas fa-chart-bar"></i> Ver Reporte de Votación
                    </a>
                </td>
            </tr>

        }
    </tbody>
</table>



<a asp-action="Create" class="btn btn-primary">Crear Nuevo Reporte</a>
