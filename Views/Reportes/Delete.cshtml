@model VotingSystem.Models.Reporte

@{
    ViewData["Title"] = "Eliminar Reporte";
}

<h2>¿Estás seguro que deseas eliminar este reporte?</h2>

<div>
    <h4>@Model.Titulo</h4>
    <dl class="row">
        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Model.Tipo</dd>
        <dt class="col-sm-2">Formato</dt>
        <dd class="col-sm-10">@Model.Formato</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
