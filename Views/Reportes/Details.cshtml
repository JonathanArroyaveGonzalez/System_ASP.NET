@model VotingSystem.Models.Reporte

@{
    ViewData["Title"] = "Detalle del Reporte";
}

<div class="card mt-4">
    <div class="card-header">
        <h2>Detalle del Reporte</h2>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Tipo</dt>
            <dd class="col-sm-9">@Model.Tipo</dd>

            <dt class="col-sm-3">Título</dt>
            <dd class="col-sm-9">@Model.Titulo</dd>

            <dt class="col-sm-3">Fecha de Generación</dt>
            <dd class="col-sm-9">@Model.FechaGeneracion?.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">Generado Por</dt>
            <dd class="col-sm-9">
                @Model.GeneradoPorNavigation?.Nombre @Model.GeneradoPorNavigation?.Apellido
            </dd>

        </dl>
        <a asp-action="Index" class="btn btn-secondary mt-3"><i class="fas fa-arrow-left"></i> Volver a la lista</a>
    </div>
</div>
